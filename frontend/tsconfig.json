{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "./",
    "paths": {
      "@alspy/*": ["src/ts/*"],
      "@public/*": ["public/*"],
      "@root/*": ["./*"]
    },
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "outDir": "dist",
    "allowJs": true
  },
  "include": ["src/ts/**/*"]
}
